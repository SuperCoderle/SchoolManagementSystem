							<div class="d-flex">
								<input class="form-control me-sm-2" placeholder="Search" @bind="Name">
								<button class="btn btn-secondary my-2 my-sm-0" @onclick="FindByName">Search</button>
							</div>
						</th>
					</tr>
					<tr>
						<th>Teacher ID</th>
						<th>Picture</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th data-type="date" data-format="YYYY-MM-DD">Date Of Birth</th>
						<th>Gender</th>
						<th>Experience</th>
						<th>Email</th>
						<th>Phone</th>
						<th>Operations</th>
					</tr>
				</thead>
				<tbody>
					@if (teachers.Count() == 0)
					{
						<Loading />
					}
					else
					{
						@foreach (var obj in teachers)
						{
						<tr>
							<td>@obj.TeacherID</td>
							<td><img src="@tc.Path/@obj.Photo" width="60" height="60" /></td>
							<td>@obj.FirstName</td>
							<td>@obj.LastName</td>
							<td>@obj.DateOfBirth</td>
							<td>@obj.Gender</td>
							<td>@obj.Experience</td>
							<td>@obj.Email</td>
							<td>@obj.Phone</td>
							<td>
								<button type="button" class="btn btn-light mr-1" data-bs-toggle="modal" data-bs-target="#exampleModal" @onclick="(() => EditClick(obj))">
